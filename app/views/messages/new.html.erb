<div class="container">
	<div class="row card">
		<div class="col-md-6">
			<%= form_for :message , url:  user_messages_path(@user) do |f| %>
			  	<div class="form-group">
			  		<%= f.label :message_body %>
			    	<%= f.text_field :body, autocomplete: false, class: "form-control" %>
			  	</div>
				
			    <%= f.submit "Save", class: "btn btn-primary" %>
			  
			<% end %>	
		</div>
	</div>
</div>